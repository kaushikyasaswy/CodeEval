<% layout('layout') -%>

<body>
  <div id="main">
    <div id="content">
      <div id="center_container">
        <% if (message == "logged out") { %>
        <h3>You have successfully logged out!</h3> 
        <% } %>
        <h1 id="signin_header">Sign In</h1>
        <form action="signin" method="post">
          <div class="form-group">
            <% if (message == "username does not exist") { %>
              <p class="error_message">Account for the given email doesnt exist. Please try again!</p>
              <% } %>
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" name="username" placeholder="Enter username">
          </div>
          <div class="form-group">
            <% if (message == "wrong password") { %>
              <p class="error_message">Wrong Password. Please try again!</p>
              <% } %>
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-default">Login</button>
          <a href="register" id="register">Register new user</a>
        </form>         
      </div>
    </div>
  </div>
</body>
</html>